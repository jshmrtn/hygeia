              opts={{ download: "cumulative_possible_index_case_end_reasons#{@tenant.name}_#{@from}_#{@to}.csv" }}
            >{{ gettext("Download CSV") }}</Link>
          </p>
        </div>
      </div>
    </div>

    <div class="row mt-3">
